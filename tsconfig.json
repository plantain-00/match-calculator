{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",

        "declaration": false,
        "lib": [
            "es5",
            "dom",
            "es6"
        ],

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "newLine": "LF"
    },
    "files": [
        "index.ts",
        "variables.ts",
        "vendor.ts",
        "worker.ts",
        "types.ts"
    ]
}