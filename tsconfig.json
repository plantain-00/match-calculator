{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",

        "declaration": false,
        "lib": [
            "es5",
            "dom",
            "es6"
        ],

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    }
}